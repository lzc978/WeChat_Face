.page-body-info {
    border: 1px solid #ccc;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    width: 100%;
    padding: 50rpx 0 150rpx 0;
}

.image-plus {
    width: 150rpx;
    height: 150rpx;
    border: 2rpx solid #d9d9d9;
    position: relative;
}

.image-plus-nb {
    border: 0;
}

.image-plus-text {
    color: #888;
    font-size: 28rpx;
}

.image-plus-horizontal {
    position: absolute;
    top: 50%;
    left: 50%;
    background-color: #d9d9d9;
    width: 4rpx;
    height: 80rpx;
    transform: translate(-50%, -50%);
}

.image-plus-vertical {
    position: absolute;
    top: 50%;
    left: 50%;
    background-color: #d9d9d9;
    width: 80rpx;
    height: 4rpx;
    transform: translate(-50%, -50%);
}
