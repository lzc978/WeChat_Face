@import 'static/style/weui.wxss';

/**app.wxss**/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

/*自定义样式*/

.page {
    font-size: 28rpx;
    background-color: white;
    font-family: -apple-system,
                 BlinkMacSystemFont,
                 'Segoe UI',
                 Roboto,
                 Oxygen,
                 Ubuntu,
                 Cantarell,
                 'Open Sans',
                 'Helvetica Neue',
                 sans-serif;
}

.image {
    width: 100%;
}

.page__title {
    text-align: center;
    font-weight: bold;
    font-size: 35rpx;
    padding-bottom: 12rpx;
}

.weui-grid__label {
    font-size: 28rpx;
    font-weight: bold;
}

.weui-grid__icon {
    width: 60rpx;
    height: 60rpx;
}

.weui-grid__exp {
    width: 100rpx;
    height: 100rpx;
    text-align: center;
}

.weui-grids {
    box-shadow: 1px 1px 8px #ccc;
}

.pad {
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.weui-footer {
    margin-top: 100rpx;
}

.page__title__exp {
    text-align: left;
    padding: 6rpx;
    font-weight: bold;
}

.grid__exp {
    width: 25%;
}

.page__title {
    text-align: center;
    padding: 6rpx;
    font-weight: bold;
}

.card {
    box-shadow: 1px 1px 8px #ccc;
    padding: 12rpx;
    margin-bottom: 12rpx;
    font-size: 26rpx;
}

.qrcode-card {
    border: none;
}

.qrcode-card>.weui-grid {
    border: none;
    padding: 0rpx 12rpx;
}
